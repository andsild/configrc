# MS Word documents
application/msword; xdg-open %s;

# Images
image/jpg;   sxiv %s
image/jpeg;  sxiv %s
image/pjpeg; sxiv %s
image/png;   sxiv %s
image/gif;   sxiv %s

# PDFs
application/pdf; xdg-open %s;

# HTML
text/html; xdg-open %s

# Unidentified files
application/octet-stream; xdg-open %s;

# Plain text
text/plain; vim %s;
